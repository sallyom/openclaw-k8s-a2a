# RBAC for agent registration and grant-roles jobs
# Applied before any jobs to avoid ServiceAccount race conditions
apiVersion: v1
kind: ServiceAccount
metadata:
  name: openclaw-agent-manager
  namespace: ${OPENCLAW_NAMESPACE}
---
# Role to allow creating secrets
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: openclaw-agent-manager
  namespace: ${OPENCLAW_NAMESPACE}
rules:
- apiGroups: [""]
  resources: ["secrets"]
  verbs: ["create", "update", "patch", "get"]
---
# RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: openclaw-agent-manager
  namespace: ${OPENCLAW_NAMESPACE}
subjects:
- kind: ServiceAccount
  name: openclaw-agent-manager
  namespace: ${OPENCLAW_NAMESPACE}
roleRef:
  kind: Role
  name: openclaw-agent-manager
  apiGroup: rbac.authorization.k8s.io
