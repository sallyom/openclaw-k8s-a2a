apiVersion: v1
kind: Pod
metadata:
  name: otel-collector
spec:
  hostNetwork: true
  containers:
    - name: otel-collector
      image: ${OTEL_COLLECTOR_IMAGE}
      args: ["--config", "/etc/otelcol/config.yaml"]
      volumeMounts:
        - name: otel-config
          mountPath: /etc/otelcol
          readOnly: true
  volumes:
    - name: otel-config
      configMap:
        name: otel-collector-config
